<%- include('../partials/header')%>
    <%- include('navbar')%>
    <div id="preloader"><div id="status"><div class="spinner"></div></div></div>
        <div class="container w-100 mt-3 shadow-lg p-1">
            <!-- form -->
            <form action="/search" method="post" class="w-100 d-flex justify-content-between align-items-center flex-wrap">
                <div class="m-2">
                    <span>From Date</span>
                    <input type="date" class="form-control"/>
                </div>

                <div class="m-2">
                    <span>To Date</span>
                    <input type="date" class="form-control"/>
                </div>

                <div class="m-2">
                    <span>Name of Event</span>
                    <input type="text" class="form-control" placeholder="name"/>
                </div>

                <div class="m-2">
                    <span>Place</span>
                    <input type="text" class="form-control" placeholder="place"/>
                </div>

                <div class="m-2"> 
                    <button type="submit" class="btn btn-danger">Search</button>
                </div>
            </form>
        </div>
        <div class="container">
            <% if(data.length==0){ %>
                <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
                <script>
                    swal("No Events have been created", "No data to be shown", "warning");
                </script>
                <%}%>
                    <div class="row">
                        <% data.forEach(element=>{ %>
                            <div class="col-md-4">

                                <div class="card mt-3">
                                    <div class="card-body">
                                        <center><h1 class="card-title"><%=element.name.replaceAll("-", " " );%></h1></center>
                                        <hr>
                                        <p class="card-text">
                                            Place:- <%=element.place%>
                                                <br>
                                                Date:- <%=element.date%>
                                                    <br>
                                                    Time:- <%=element.time%>
                                                    <br>
                                                    No of Experience:- <%=element.noexp%>
                                        </p>
                                        <div class="d-flex justify-content-between flex-wrap">
                                            <a href="/showreg/<%=element.name%>" class="btn btn-primary m-1">See
                                                registration</a>
                                            <a href="/addproduct/<%=element.name%>" class="btn btn-danger m-1">Add
                                                Product</a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <% }) %>
                    </div>
        </div>


        <%- include('../partials/footer')%>