<%if(status=="Success"){%>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        swal("Good job!", "Event Created", "success");
    </script>
<% } %>
<%if(status=="Error"){%>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        swal("Error", "<%=message %>", "error");
    </script>
<% } %>
<%if(status=="Warning"){%>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        swal("Warning", "<%=message %>", "warning");
    </script>
<% } %>
